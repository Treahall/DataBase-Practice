        <TextBox x:Name="Assets_Text_Box" Margin="10,35,503,10" TextWrapping="Wrap"/>
        <Button x:Name="See_Employees" Content="See Employees" HorizontalAlignment="Left" Margin="595,10,0,0" VerticalAlignment="Top" Width="100" RenderTransformOrigin="1.874,0.762" Click="See_Employees_Click"/>
